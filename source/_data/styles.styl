::-webkit-scrollbar {
  width: 14px;
  height: 6px;
}

::-webkit-scrollbar-thumb {
  border-radius: 12px;
  background-color: rgba(144, 147, 153, .4);
}

body {
  background: url(/images/custom/background.jpg);
  background-repeat: no-repeat;
  background-attachment: fixed; // 固定不滚动
  background-size: cover; // 填充
  background-position: center center;
}


//博客内容透明化
//文章内容的透明度设置
.content-wrap {
  opacity: 0.8;
}

//侧边框的透明度设置
.sidebar {
  border-radius: $border-radius;
  opacity: 0.8;
}

//菜单栏的透明度设置
.header-inner {
  background: rgba(255, 255, 255, 0.8);
}

//搜索框（local-search）的透明度设置
.popup {
  opacity: 0.8;
}

// 粒子时钟样式
.site-overview {
  text-align: center;
}

canvas#canvas {
  margin-top: 20px;
}

// 布局宽度修改
.content.index.posts-expand {
  display: flex;
  flex-wrap: wrap;
  justify-content space-between

  .post-block {
    width: 49%;
    box-sizing: border-box;
    margin: 0 0 20px;

    +tablet-mobile() {
      width: 100%;
    }
  }

  .post-block + .post-block {
    margin-top: unset;
  }
}

// 添加顶部
.headband {
  line-height: $headband-height;

  .welcome {
    font-size: 16px;
    font-weight: bold;
    color: #999999;
    text-align: center;
    margin: unset;
    padding-left: 260px;
  }
}

// 打开全文描述文字字号修改
.posts-expand {
  border-radius: 6px;
  padding: 25px;
  margin-bottom: 50px;
  box-shadow: 0 0 14px rgb(202 203 203 / 50%);

  +tablet-mobile() {
    padding: 15px;
  }

  .post-meta {
    color: $black-light;

    .post-description {
      font-size: $font-size-large;
    }
  }
}

.post-body {
  .btn {
    border: unset;
  }

  a {
    color: $orange;
    border-bottom: unset;
  }
}

